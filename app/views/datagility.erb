<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0/angular.min.js"></script>
<script src="/js/datagility.js"></script>
<div ng-app="datagility">
    <div class="datagility" ng-controller="datagilityCtrl">
        <div id="datagility-left">
            <div class="input-div">
                <label>Sales $</label>
                <input class="input-box input-box-large" type="number" id="sales" ng-model="inputs.sales" autofocus="autofocus">
            </div>
            <div class="input-div">
                <label>Average Order Size $ (Mfg)</label>
                <input class="input-box input-box-medium" type="number" id="averageOrderMfg" ng-model="inputs.mfgAverageOrder">
            </div>
            <div class="input-div">
                <label>Average Order Size $ (Cust)</label>
                <input class="input-box input-box-medium" type="number" id="averageOrderCust" ng-model="inputs.custAverageOrder">
            </div>
            <div class="input-div">
                <label>Gross Margin %</label>
                <input class="input-box input-box-small" type="number" id="grossMargin"ng-model="inputs.grossMargin">
            </div>
            <div class="input-div">
                <label>Estimated Sales increase %</label>
                <input class="input-box input-box-small" type="number" id="salesIncreaseEst" ng-model="inputs.estimatedSalesInc">
            </div>
            <div class="input-div">
                <label>% of orders with errors (Mfg)</label>
                <input class="input-box input-box-small" type="number" id="orderErrorsMfg" ng-model="inputs.mfgOrderErrors">
            </div>
            <div class="input-div">
                <label>% of orders with errors (Cust)</label>
                <input class="input-box input-box-small" type="number" id="orderErrorsCust" ng-model="inputs.custOrderErrors">
            </div>
            <div class="input-div">
                <label>Cost to fix order with error (Mfg)</label>
                <input class="input-box input-box-small" type="number" id="costErrorMfg" ng-model="inputs.mfgErrorCost">
            </div>
            <div class="input-div">
                <label>Cost to fix order with error (Cust)</label>
                <input class="input-box input-box-small" type="number" id="costErrorCust" ng-model="inputs.custErrorCost">
            </div>
            <h2 id="error-header">Error reductions savings %</h2>
            <div class="input-div">
                <label>Manufacturer</label>
                <input class="input-box input-box-small" type="number" id="errorSavingsMfg" ng-model="inputs.mfgErrorSavings">
            </div>
            <div class="input-div">
                <label>Customer</label>
                <input class="input-box input-box-small" type="number" id="errorSavingsCust" ng-model="inputs.custErrorSavings">
            </div>
            <div class="input-div" id="roi-div">
                <label>Desired ROI</label>
                <input class="input-box input-box-small" type="number" id="desiredRoi" ng-model="inputs.desiredRoi">
            </div>
            <div class="input-div">
                <label>Desired Payback</label>
            </div>
        </div>
        <div id="datagility-right">
            <div class="two-output outer-output">
                <div class="two-output-div output-div">
                    <h3>Sales Increase</h3>
                    <span>{{outputs.salesProjection | currency:"$":0}}</span>
                </div>
                <div class="two-output-div output-div">
                    <h3>GM Increase</h3>
                    <span>{{outputs.gmIncrease | currency:"$":0}}</span>
                </div>
            </div>
            <div class="two-output outer-output">
                <h3 class="h3-large"># of Orders (Manufacturer)</h3>
                <div class="two-output-div output-div">
                    <h3>With Errors</h3>
                    <span>{{outputs.mfgErrorsAfter | number:0}}</span>
                </div>
                <div class="two-output-div output-div">
                    <h3>Cost of Errors</h3>
                    <span>{{outputs.mfgCostErrorsAfter | currency:"$":0}}</span>
                </div>
            </div>
            <div class="two-output outer-output">
                <h3 class="h3-large"># of Orders (Customer)</h3>
                <div class="two-output-div output-div">
                    <h3>With Errors</h3>
                    <span>{{outputs.custErrorsAfter | number:0}}</span>
                </div>
                <div class="two-output-div output-div">
                    <h3>Cost of Errors</h3>
                    <span>{{outputs.custCostErrorsAfter | currency:"$":0}}</span>
                </div>
            </div>
            <div class="three-output outer-output">
                <h3 class="h3-large">Error Reduction Savings</h3>
                <div class="three-output-div output-div">
                    <h3>Mfg</h3>
                    <span>{{outputs.mfgSavings | currency:"$":0}}</span>
                </div>
                <div class="three-output-div output-div">
                    <h3>Cust</h3>
                    <span>{{outputs.custSavings | currency:"$":0}}</span>
                </div>
                <div class="three-output-div output-div">
                    <h3>Total</h3>
                    <span>{{outputs.totalSavings | currency:"$":0}}</span>
                </div>
            </div>
            <div class="four-output outer-output">
                <div class="four-output-div output-div">
                    <h3>Total Benefit</h3>
                    <span>{{outputs.totalBenefit | currency:"$":0}}</span>
                </div>
                <div class="four-output-div output-div">
                    <h3>Desired ROI</h3>
                    <span ng-show="inputs.desiredRoi">{{inputs.desiredRoi | number:0}}%</span>
                </div>
                <div class="four-output-div output-div">
                    <h3 class="h3-small">Fee (Calculated)</h3>
                    <span>{{outputs.feeCalculated | currency:"$":0}}</span>
                </div>
                <div class="four-output-div output-div">
                    <h3>Payback</h3>
                    <span>{{outputs.payback | number:2}}</span>
                </div>
            </div>
            <div class="four-output outer-output">
                <div class="four-output-div output-div">
                    <h3>Total Benefit</h3>
                    <span>{{outputs.totalBenefit | currency:"$":0}}</span>
                </div>
                <div class="four-output-div output-div">
                    <h3 class="h3-small">ROI (Calculated)</h3>
                    <span ng-show="outputs.totalBenefit">{{outputs.roiAfter | number:0}}%</span>
                </div>
                <div class="four-output-div output-div">
                    <h3>Fee</h3>
                    <span ng-show="outputs.totalBenefit">{{outputs.fee | currency:"$":0}}</span>
                </div>
                <div class="four-output-div output-div">
                    <h3>Payback</h3>
                    <span>{{outputs.paybackAfter | number:2}}</span>
                </div>
            </div>
        </div>
    </div>
</div>